//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
TLabel *L;
TPanel *P;
TEdit *E;
int x;
A *newNote;

//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	int x = 0;
}

void __fastcall TForm1::Edit1Click(TObject *Sender)
{
	Edit1 -> Text = "";
}
//---------------------------------------------------------------------------

void __fastcall TForm1::Button1Click(TObject *Sender)
{
	A *newNote = new A(this);
	//A *Notelnstance = (A *)FindComponent("newNote");
	//Notelnstance->Caption= "Hello";
	//TPanel* x = ((TPanel*)(Form1->FindComponent("Panel"+IntToStr(1))));
	newNote->Parent = this;
	newNote->Top = x*50 + 75;
	newNote->Left = 180;
	newNote->Width = 689;
	newNote->Caption = "1.Заметка " + IntToStr(x+1);
	x++;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	Form1->RemoveControl(newNote);
}
//---------------------------------------------------------------------------
