//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop
#include <list>
#include <string.h>

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
TLabel *L;
TPanel *P;
TEdit *E;
int x;
const int num = 20;
Note *newNote;

//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	int x = 0;
}

void __fastcall TForm1::Edit1Click(TObject *Sender)
{
	Edit1 -> Text = "";
}
//---------------------------------------------------------------------------

void __fastcall TForm1::Button1Click(TObject *Sender)
{
	newNote = new Note(ScrollBox1);
	newNote->Parent = ScrollBox1;
	newNote->Width = 669;
	newNote->Top = x*45;
	newNote->Caption = "Заметка " + IntToStr(x+1);
	x++;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	delete newNote;
	x--;
}
//---------------------------------------------------------------------------



